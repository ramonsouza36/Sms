@page "/instructors"

<PageTitle>Instructors</PageTitle>

<div class="container-fluid col-md-12">
    <h3>Professores</h3>
</div>

<div class="row">
    <div class="container-fluid col-md-12">
        <input class="form-control col-md-4" type="text" placeholder="Nome" @bind-value="@Name"/>
        <input class="form-control col-md-4" type="text" placeholder="Email" @bind-value="@Name"/>
        <input class="form-control col-md-4" type="number" placeholder="Carga horária" />
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <textarea class="form-control" placeholder="Certificações" ></textarea>
        </div>
    </div>
</div>

<div>
    <button type="button" class="btn btn-primary">Salvar</button>
    <button type="button" class="btn btn-secondary">Cancelar</button>
</div>

@code{
    public string Name = "";
}